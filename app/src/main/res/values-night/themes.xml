<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MedicinesStorage" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <!-- Other colors. -->
        <item name="background">@color/white<!--@color/white--></item>
        <item name="colorSurface">@color/white<!--@color/white--></item>
        <item name="colorError">@color/red_error</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnError">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/background</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="actionBarSize">46dp</item>
        <item name="colorControlNormal">@color/white70</item>
        <item name="android:colorControlNormal">@color/white70</item>
        <item name="android:textColorHint">@color/white70</item>
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
    </style>
</resources>